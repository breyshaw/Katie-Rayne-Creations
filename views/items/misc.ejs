<%- include('../partials/html-head') %>


<main>
  <div id="carouselExampleControls" class="carousel slide animate__animated animate__backInRight" data-bs-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img id='carousel-image' src="https://i.imgur.com/2imkriC.png" class="d-block w-100" alt="...">
      </div>
      <div class="carousel-item">
        <img id='carousel-image' src="https://i.imgur.com/0SqCiwr.png" class="d-block w-100" alt="...">
      </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
    <%- include('../partials/nav') %>
    <h1 class='animate__animated animate__backInRight'>Miscellanous Crafts</h1>
    <section class='animate__animated animate__backInRight' >
            <% items.forEach((item) => { %> 
                    <div>
                    <p> <%= item.title %> </p>
                    <img src= "<%= item.imageUrl %>" alt="Image of Item" class="item-img">
                    </div>
                    <a href="/items/<%= item._id %> ">Details</a>
                    <div>
                    </a>
                    <div>
                      <% if(user) { %>
                        <% if(user.isAdmin) { %>  
                    <a href="/items/<%= item._id %>/edit">
                        <button>Edit Item</button>
                      </a>
                    </div>
                    <form action="/items/<%= item._id %>?_method=DELETE" method="POST">
                    <button>Delete item</button>
                    </form>
                    <% } %>
                    <% } %>  
                <% }) %> 
    </section>
</main>

<%- include('../partials/footer') %>